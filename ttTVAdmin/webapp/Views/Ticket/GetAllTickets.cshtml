        </th>
        <th>
            联系人邮箱
        </th>
        <th>
            电话
        </th>
        <th>
           类型
        </th>
        <th>
           票价
        </th>
        <th>
           开始时间
        </th>
        <th>
           结束时间
        </th>
        <th>
           相关文件
        </th>
        <th>
            详情
        </th>
        <th>
           发行公司
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Hot_Ticket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hot_Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hot_Tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hot_type)
        </td>
        <td>
