@model IEnumerable<ttTVMS.Models.HotTickt>
@helper Truncate(string input, int length) { 
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0,length)<text>...</text>
    }
    }

@{
    ViewBag.Title = "GetAllTickets";
}

<h2>GetAllTickets</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
